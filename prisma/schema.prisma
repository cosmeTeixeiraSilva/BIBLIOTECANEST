// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Livros {
  idLivro     Int           @id @default(autoincrement())
  titulo      String
  autor       String
  publicado   DateTime
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Emprestimos Emprestimos[]
}

model Usuarios {
  idUser      Int           @id @default(autoincrement())
  nome        String
  email       String        @unique
  senha       String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Emprestimos Emprestimos[]
}

model Emprestimos {
  idEmprestimo Int       @id @default(autoincrement())
  livroId      Int
  usuarioId    Int
  emprestado   DateTime
  devolvido    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  livro        Livros    @relation(fields: [livroId], references: [idLivro])
  usuario      Usuarios  @relation(fields: [usuarioId], references: [idUser])
}
